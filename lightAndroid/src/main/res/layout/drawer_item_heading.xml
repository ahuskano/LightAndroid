<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgDrawerItemProfile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/md_20" />


    <TextView
        android:id="@+id/txtDrawerItemProfileLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imgDrawerItemProfile"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_dark2"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/text_white"
        android:textSize="@dimen/td_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_shadow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_shadow" />

</RelativeLayout>