<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_shadow" />

    <RelativeLayout style="@style/RlProfileContainer">

        <ImageView
            android:id="@+id/imgDrawerItemProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtDrawerItemProfileLabel"
            style="@style/ProfileLabel"
            android:layout_below="@+id/imgDrawerItemProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/drawer_item_profile_label_spacing"
            android:layout_marginTop="@dimen/drawer_item_profile_label_spacing_top" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_shadow" />

</RelativeLayout>